@model IEnumerable<ShoghlanaTech.Models.Category>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<!--Welcome Container-->
<div class="jumbotron bg-light text-center" style="height: 485px; ">
    <!--Search-->
    <form class="form-inline" action="~/Home/Search" method="get">
        <div class="input-group">
            <i class="bi bi-search mt-2"></i>
            <input class="form-control mx-2" type="text" style="width:450px" placeholder="ابحث عن وظيفة .." name="title" required>
        </div>
    </form>
    <h1 class="text-success pt-5">Shoghlana Tech</h1>
    <p class="mt-3"> موقع عربي متخصص في البحث عن وظائف تكنولوجيا المعلومات و الذكاء الاصطناعي</p>
</div>


<!--Categories Section-->
<div class="container" id="Categories">
    <h3>وظائف حسب التخصص</h3>
    <p>يمكنك الاطلاع على احدث الوظائف حسب تخصصك.</p>

    <div class="row row-cols-1 row-cols-md-3 g-4">

        @foreach (var cat in Model)
        {
            <div class="col py-3">
                <div class="card h-100">
                    <img src="~/Uploads/@cat.Image" class="card-img-top" alt="Category Image" style="height: 250px"/>
                    <div class="card-body">
                        <h5 class="card-title">@Html.ActionLink(cat.Name, "Category", new { @id = cat.Id }, new { @style = "color: green" })</h5>
                        <p class="card-text">
                            @Html.DisplayFor(item => cat.Description)
                        </p>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<!--/ Categories Section -->
