@model ShoghlanaTech.Models.Category

@{
    ViewBag.Title = "التفاصيل";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    

<div class="m-5">
    <h4>Category Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>

        <dd>
            <img src="~/Uploads/@Html.DisplayFor(model => model.Image)" style="height:50px;width:50px;" />
        </dd>

    </dl>

    <p>
        @Html.ActionLink("Edit", "EditCategory", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "AllCategories")
    </p>
</div>
